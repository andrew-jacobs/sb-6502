#===============================================================================
# C Compiler
#-------------------------------------------------------------------------------

CC		=	WDC02CC

CFLAGS	=	-PX -SP

#===============================================================================
# Assembler
#-------------------------------------------------------------------------------


#===============================================================================
# Linker
#-------------------------------------------------------------------------------

LD		=	WDCLN

LDFLAGS	=	-HB -C0200,0 -T

#===============================================================================
#-------------------------------------------------------------------------------

AR		=	WDCLIB

#===============================================================================
# Commands
#-------------------------------------------------------------------------------

RM		=	ERASE
CP		=	COPY

#===============================================================================
# Rules
#-------------------------------------------------------------------------------

.c.obj:
		$(CC) $(CFLAGS) $*.c
